Label {
    color: rgb(226, 31, 39);
}

Button {
    -unity-background-image-tint-color: rgb(255, 255, 255);
    background-color: rgba(96, 19, 9, 255);
    color: rgb(255, 255, 255);
    border-left-color: rgba(99, 15, 35, 255);
    border-right-color: rgba(99, 15, 35, 255);
    border-top-color: rgba(99, 15, 35, 255);
    border-bottom-color: rgba(99, 15, 35, 255);
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    width: 150px;
    height: 50px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
}

Button:hover {
    background-color: rgba(132, 56, 29, 255);
}

.backgroundColour {
    background-color: rgb(11, 0, 17);
}

.buttonTallBox {
    width: 15%;
}

.buttonWideBox {
    width: 35%;
    height: 12%;
}
